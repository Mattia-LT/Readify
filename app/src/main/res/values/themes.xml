<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Readify" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#00009C</item>
        <item name="colorPrimaryVariant">#4b62f0</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#008F8F</item>
        <item name="colorSecondaryVariant">#94CDDF</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <item name="colorTertiary">#EAEAEA</item>
        <item name="colorOnTertiary">#000000</item>

        <item name="backgroundColor">#FFFFFF</item>
        <item name="colorOnBackground">#000000</item>

    </style>

    <style name="RatingBar" parent="Theme.Material3.DayNight">
        <item name="colorControlNormal">@color/grey_button</item>
        <item name="colorControlActivated">@color/rating_yellow</item>
    </style>

    <style name="RoundedEditText" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedSpinnerTheme" parent="android:Widget.Material.Spinner.Underlined">
        <item name="android:background">@drawable/rounded_spinner_background </item>
        <item name="android:popupBackground">@drawable/rounded_spinner_background </item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="CustomCollectionVisibilitySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">?attr/colorAccent</item>
    </style>

    <style name="RenameAlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@drawable/dialog_button_selector</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@drawable/dialog_button_selector</item>
    </style>

</resources>


