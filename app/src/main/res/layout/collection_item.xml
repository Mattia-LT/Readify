<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/collection_thumbnail_imageview"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:background="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/collection_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fantasy"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/collection_thumbnail_imageview"
        app:layout_constraintStart_toStartOf="@+id/collection_thumbnail_imageview" />

    <ImageView
        android:id="@+id/collection_visibility_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/baseline_lock_outline_24"
        app:layout_constraintBottom_toBottomOf="@+id/collection_thumbnail_imageview"
        app:layout_constraintEnd_toEndOf="@+id/collection_thumbnail_imageview" />

</androidx.constraintlayout.widget.ConstraintLayout>